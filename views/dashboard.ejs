<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>IVPLAST | Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <style>
    body{background:#f3f5f7;}
    .app{display:flex;min-height:100vh;}
    .sidebar{
      width:260px;background:#ffffff;border-right:1px solid #e9ecef;
      padding:18px 14px;position:sticky;top:0;height:100vh;
    }
    .brand{display:flex;align-items:center;gap:10px;padding:8px 10px;margin-bottom:10px;}
    .brand img{height:34px;}
    .nav a{display:flex;align-items:center;gap:10px;padding:10px 12px;border-radius:10px;color:#344054;text-decoration:none;}
    .nav a:hover{background:#f2f4f7;}
    .nav a.active{background:#e8f2ff;color:#0b5ed7;font-weight:600;}
    .content{flex:1;padding:22px;}
    .topbar{
      display:flex;align-items:center;justify-content:space-between;
      background:#fff;border:1px solid #e9ecef;border-radius:14px;padding:12px 14px;
      box-shadow:0 4px 18px rgba(0,0,0,.04);
      margin-bottom:18px;
    }
    .kpi{border:0;border-radius:14px;box-shadow:0 8px 22px rgba(0,0,0,.06);}
    .kpi .card-body{display:flex;align-items:center;justify-content:space-between;gap:10px;}
    .pill{width:38px;height:38px;border-radius:12px;display:flex;align-items:center;justify-content:center;font-weight:700;}
    .panel{border:0;border-radius:14px;box-shadow:0 8px 22px rgba(0,0,0,.06);}
    .muted{color:#667085;}
  </style>
</head>
<body>
<%
  const user = (typeof usuario !== 'undefined' && usuario) ? usuario : { nome: "Raphael" };
  const stats = (typeof kpis !== 'undefined' && kpis) ? kpis : {
    totalOcorrencias: 17,
    abertas: 2,
    tempoMedioHoras: 26,
    valorEstimado: 35340
  };
  const ocorrenciasPorSemana = (typeof serieSemanal !== 'undefined' && serieSemanal) ? serieSemanal : [0,0,1,2,6,3,5,2,2,2,4];
  const motivos = (typeof motivosOcorrencia !== 'undefined' && motivosOcorrencia) ? motivosOcorrencia : {
    "IVPLAST": 6, "Cliente": 5, "Transportadora": 4, "Vendedor": 2
  };
%>

<div class="app">
  <aside class="sidebar">
    <div class="brand">
      <img src="https://dummyimage.com/120x34/ffffff/1177cc.png&text=IVPLAST" alt="IVPLAST">
      <div>
        <div class="fw-semibold">IVPLAST</div>
        <div class="small text-secondary">Ocorr√™ncias</div>
      </div>
    </div>

    <div class="nav flex-column">
      <a class="active" href="/dashboard">üè† Menu Principal</a>
      <a href="/novo">‚ûï Novo</a>
      <a href="/ocorrencias">üîé Busca por Ocorr√™ncia</a>
      <a href="/relatorios">üìä Relat√≥rios</a>
      <a href="/configuracoes">‚öôÔ∏è Configura√ß√µes</a>
      <a href="/auditoria">üßæ Auditoria</a>
      <hr class="my-2"/>
      <a href="/logout">üö™ Sair</a>
    </div>
  </aside>

  <main class="content">
    <div class="topbar">
      <div>
        <div class="fw-semibold">Bem-vindo ao sistema, <%= user.nome %>!</div>
        <div class="small muted">Acompanhe o status das ocorr√™ncias e indicadores.</div>
      </div>
      <div class="d-flex gap-2 align-items-center">
        <span class="small text-secondary">Status:</span>
        <span class="badge text-bg-success">Online</span>
      </div>
    </div>

    <div class="row g-3 mb-3">
      <div class="col-md-3">
        <div class="card kpi">
          <div class="card-body">
            <div>
              <div class="small muted">Total de ocorr√™ncias</div>
              <div class="fs-3 fw-bold"><%= stats.totalOcorrencias %></div>
            </div>
            <div class="pill" style="background:#e8f2ff;color:#0b5ed7;">B</div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card kpi">
          <div class="card-body">
            <div>
              <div class="small muted">Ocorr√™ncias abertas</div>
              <div class="fs-3 fw-bold"><%= stats.abertas %></div>
            </div>
            <div class="pill" style="background:#fff1e6;color:#d9480f;">A</div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card kpi">
          <div class="card-body">
            <div>
              <div class="small muted">Tempo m√©dio (h)</div>
              <div class="fs-3 fw-bold"><%= stats.tempoMedioHoras %>h</div>
            </div>
            <div class="pill" style="background:#eafaf1;color:#198754;">U</div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card kpi">
          <div class="card-body">
            <div>
              <div class="small muted">Valor estimado (R$)</div>
              <div class="fs-3 fw-bold">R$ <%= Number(stats.valorEstimado).toLocaleString('pt-BR') %></div>
            </div>
            <div class="pill" style="background:#f0efff;color:#4c37c9;">C</div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-lg-7">
        <div class="card panel">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div class="fw-semibold">Ocorr√™ncias por Semana</div>
              <div class="small muted">√∫ltimas 11 semanas</div>
            </div>
            <canvas id="chartSemana" height="110"></canvas>
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="card panel">
          <div class="card-body">
            <div class="fw-semibold mb-2">Ocorr√™ncias por Motivo</div>
            <canvas id="chartMotivo" height="140"></canvas>
            <div class="small muted mt-2">Distribui√ß√£o por respons√°vel/origem.</div>
          </div>
        </div>
      </div>
    </div>

  </main>
</div>

<script>
  // Linha
  const semanaLabels = Array.from({length: <%= ocorrenciasPorSemana.length %>}, (_,i)=>`S${i+1}`);
  new Chart(document.getElementById('chartSemana'), {
    type: 'line',
    data: {
      labels: semanaLabels,
      datasets: [{
        label: 'Ocorr√™ncias',
        data: <%- JSON.stringify(ocorrenciasPorSemana) %>,
        tension: 0.35,
        borderWidth: 2,
        pointRadius: 3,
        fill: false
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: { y: { beginAtZero: true, ticks: { precision:0 } } }
    }
  });

  // Donut
  const motivoObj = <%- JSON.stringify(motivos) %>;
  new Chart(document.getElementById('chartMotivo'), {
    type: 'doughnut',
    data: {
      labels: Object.keys(motivoObj),
      datasets: [{ data: Object.values(motivoObj), borderWidth: 0 }]
    },
    options: { responsive: true, plugins: { legend: { position: 'right' } } }
  });
</script>
</body>
</html>
