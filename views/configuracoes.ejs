<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>IVPLAST | Configura√ß√µes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body{background:#f3f5f7;}
    .app{display:flex;min-height:100vh;}
    .sidebar{width:260px;background:#fff;border-right:1px solid #e9ecef;padding:18px 14px;position:sticky;top:0;height:100vh;}
    .nav a{display:flex;align-items:center;gap:10px;padding:10px 12px;border-radius:10px;color:#344054;text-decoration:none;}
    .nav a:hover{background:#f2f4f7;}
    .nav a.active{background:#e8f2ff;color:#0b5ed7;font-weight:600;}
    .content{flex:1;padding:22px;}
    .panel{border:0;border-radius:14px;box-shadow:0 8px 22px rgba(0,0,0,.06);}
    .topbar{background:#fff;border:1px solid #e9ecef;border-radius:14px;padding:12px 14px;box-shadow:0 4px 18px rgba(0,0,0,.04);margin-bottom:18px;}
    .btn-primary{background:#1177cc;border-color:#1177cc;}
    .table thead th { font-size: 12px; text-transform: uppercase; letter-spacing: .02em; color: #667085; }
    .badge-role{ background:#eef2ff; color:#364152; border:1px solid #e5e7eb; }
    .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
  </style>
</head>
<body>
<%
  const cfg = (typeof config !== 'undefined' && config) ? config : {
    adminEmail: "", adminName: "", databaseSSL: true
  };

  const listUsers = (typeof users !== 'undefined' && Array.isArray(users)) ? users : [];

  const roles = [
    { value: "user", label: "Usu√°rio" },
    { value: "atendimento", label: "Atendimento" },
    { value: "comercial", label: "Comercial" },
    { value: "qualidade", label: "Qualidade" },
    { value: "logistica", label: "Log√≠stica" },
    { value: "financeiro", label: "Financeiro" },
    { value: "admin", label: "Admin" },
    { value: "diretor", label: "Diretor(a)" }
  ];

  function fmtDate(v){
    try{
      if(!v) return "-";
      const d = new Date(v);
      if (isNaN(d.getTime())) return String(v).slice(0,10);
      return d.toISOString().slice(0,10);
    }catch(e){ return "-"; }
  }

  function isActive(u){
    if (u && typeof u.active === "boolean") return u.active;
    if (u && typeof u.active === "number") return u.active === 1;
    return true;
  }

  function roleLabel(v){
    const r = roles.find(x => x.value === String(v||"").toLowerCase());
    return r ? r.label : (v || "-");
  }
%>

<div class="app">
  <aside class="sidebar">
    <div class="d-flex align-items-center gap-2 px-2 mb-3">
      <img src="https://dummyimage.com/120x34/ffffff/1177cc.png&text=IVPLAST" style="height:34px;" alt="IVPLAST">
      <div>
        <div class="fw-semibold">IVPLAST</div>
        <div class="small text-secondary">Ocorr√™ncias</div>
      </div>
    </div>
    <div class="nav flex-column">
      <a href="/dashboard">üè† Menu Principal</a>
      <a href="/novo">‚ûï Novo</a>
      <a href="/ocorrencias">üîé Busca por Ocorr√™ncia</a>
      <a href="/relatorios">üìä Relat√≥rios</a>
      <a class="active" href="/configuracoes">‚öôÔ∏è Configura√ß√µes</a>
      <a href="/auditoria">üßæ Auditoria</a>
      <hr class="my-2"/>
      <a href="/logout">üö™ Sair</a>
    </div>
  </aside>

  <main class="content">
    <div class="topbar">
      <div class="fw-semibold">Configura√ß√µes</div>
      <div class="small text-secondary">Par√¢metros do sistema (admin / sess√£o / banco) e gest√£o de usu√°rios.</div>
    </div>

    <!-- Alertas (server-side e client-side) -->
    <div id="flashBox">
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
    </div>

    <div class="row g-3">
      <!-- Admin -->
      <div class="col-lg-6">
        <div class="card panel">
          <div class="card-body">
            <div class="fw-semibold mb-2">Admin</div>
            <form id="formAdmin" method="POST" action="/configuracoes/admin">
              <div class="mb-2">
                <label class="form-label small">Admin email</label>
                <input name="adminEmail" class="form-control" value="<%= cfg.adminEmail %>" placeholder="admin@empresa.com">
              </div>
              <div class="mb-2">
                <label class="form-label small">Admin nome</label>
                <input name="adminName" class="form-control" value="<%= cfg.adminName %>" placeholder="Nome do admin">
              </div>
              <button class="btn btn-primary btn-sm mt-2" type="submit">Salvar</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Seguran√ßa -->
      <div class="col-lg-6">
        <div class="card panel">
          <div class="card-body">
            <div class="fw-semibold mb-2">Seguran√ßa</div>
            <form id="formMinhaSenha" method="POST" action="/configuracoes/senha">
              <div class="mb-2">
                <label class="form-label small">Nova senha (min. 6)</label>
                <input name="novaSenha" type="password" class="form-control" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required minlength="6">
              </div>
              <div class="mb-2">
                <label class="form-label small">Confirmar</label>
                <input name="novaSenha2" type="password" class="form-control" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required minlength="6">
              </div>
              <button class="btn btn-outline-primary btn-sm mt-2" type="submit">Alterar minha senha</button>
            </form>
            <hr>
            <div class="small text-secondary">
              <div><b>Dica:</b> senhas e segredos devem ficar em vari√°veis de ambiente (Render).</div>
              <div>N√£o √© poss√≠vel ‚Äúver senha atual‚Äù (fica criptografada). Use reset.</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="col-lg-12">
        <div class="card panel">
          <div class="card-body">
            <div class="fw-semibold mb-2">Status do ambiente</div>
            <div class="row g-2 small">
              <div class="col-md-4"><span class="text-secondary">DATABASE_SSL:</span> <b><%= cfg.databaseSSL ? 'true' : 'false' %></b></div>
              <div class="col-md-4"><span class="text-secondary">Node env:</span> <b><%= (typeof process !== 'undefined' && process.env && process.env.NODE_ENV) ? process.env.NODE_ENV : 'dev' %></b></div>
              <div class="col-md-4"><span class="text-secondary">App:</span> <b>ivplast-reclamacoes</b></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Gest√£o de Usu√°rios -->
      <div class="col-lg-12">
        <div class="card panel">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
              <div>
                <div class="fw-semibold">Gest√£o de usu√°rios</div>
                <div class="small text-secondary">Criar, trocar cargo, ativar/desativar e resetar senha.</div>
              </div>
              <button class="btn btn-primary btn-sm" data-bs-toggle="collapse" data-bs-target="#novoUserBox" aria-expanded="false">
                + Novo usu√°rio
              </button>
            </div>

            <div class="collapse mt-3" id="novoUserBox">
              <div class="border rounded-3 p-3 bg-light">
                <form id="formCriarUser" class="row g-2" method="POST" action="/configuracoes/usuarios/criar">
                  <div class="col-md-3">
                    <label class="form-label small">Nome</label>
                    <input name="nome" class="form-control" placeholder="Nome" required>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label small">Email</label>
                    <input name="email" type="email" class="form-control" placeholder="email@empresa.com" required>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label small">Senha (min. 6)</label>
                    <input name="senha" type="password" class="form-control" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" minlength="6" required>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label small">Cargo</label>
                    <select name="role" class="form-select">
                      <% roles.forEach(r => { %>
                        <option value="<%= r.value %>"><%= r.label %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="col-12 d-flex gap-2">
                    <button class="btn btn-primary btn-sm" type="submit">Criar usu√°rio</button>
                    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#novoUserBox">Cancelar</button>
                  </div>
                </form>
              </div>
            </div>

            <hr class="my-3"/>

            <div class="table-responsive">
              <table class="table align-middle">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Cargo</th>
                    <th>Status</th>
                    <th>Criado</th>
                    <th class="text-end">A√ß√µes</th>
                  </tr>
                </thead>
                <tbody>
                <% if (!listUsers.length) { %>
                  <tr>
                    <td colspan="6" class="text-center text-secondary py-4">
                      Nenhum usu√°rio encontrado.
                    </td>
                  </tr>
                <% } %>

                <% listUsers.forEach(u => { %>
                  <tr>
                    <td class="fw-semibold"><%= u.nome || '-' %></td>
                    <td class="mono"><%= u.email || '-' %></td>
                    <td>
                      <span class="badge badge-role rounded-pill px-2 py-1"><%= roleLabel(u.role) %></span>
                    </td>
                    <td>
                      <% if (isActive(u)) { %>
                        <span class="badge bg-success-subtle text-success border border-success-subtle">Ativo</span>
                      <% } else { %>
                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Inativo</span>
                      <% } %>
                    </td>
                    <td class="text-secondary"><%= fmtDate(u.created_at) %></td>
                    <td class="text-end">
                      <div class="d-inline-flex flex-wrap gap-2 justify-content-end">
                        <!-- Trocar cargo -->
                        <form method="POST" action="/configuracoes/usuarios/<%= u.id %>/role" class="d-inline-flex gap-2">
                          <select name="role" class="form-select form-select-sm" style="min-width:160px">
                            <% roles.forEach(r => { %>
                              <option value="<%= r.value %>" <%= String(u.role||'').toLowerCase() === r.value ? 'selected' : '' %>>
                                <%= r.label %>
                              </option>
                            <% }) %>
                          </select>
                          <button class="btn btn-outline-primary btn-sm" type="submit">Salvar</button>
                        </form>

                        <!-- Ativar/Desativar -->
                        <form method="POST" action="/configuracoes/usuarios/<%= u.id %>/active" class="d-inline">
                          <% if (isActive(u)) { %>
                            <input type="hidden" name="active" value="false">
                            <button class="btn btn-outline-danger btn-sm" type="submit"
                              onclick="return confirm('Desativar este usu√°rio? Ele n√£o conseguir√° fazer login.');">
                              Desativar
                            </button>
                          <% } else { %>
                            <input type="hidden" name="active" value="true">
                            <button class="btn btn-outline-success btn-sm" type="submit">
                              Ativar
                            </button>
                          <% } %>
                        </form>

                        <!-- Reset senha (abre modal) -->
                        <button class="btn btn-outline-secondary btn-sm"
                          type="button"
                          data-bs-toggle="modal"
                          data-bs-target="#resetSenhaModal"
                          data-userid="<%= u.id %>"
                          data-username="<%= (u.nome || 'Usu√°rio') %>"
                          data-useremail="<%= (u.email || '') %>">
                          Reset senha
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </div>

            <div class="small text-secondary">
              <b>Observa√ß√£o:</b> Senhas ficam criptografadas (bcrypt). Voc√™ n√£o consegue ‚Äúver a senha‚Äù, apenas resetar.
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<!-- Modal Reset Senha -->
<div class="modal fade" id="resetSenhaModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <form class="modal-content" method="POST" id="resetSenhaForm" action="">
      <div class="modal-header">
        <h5 class="modal-title">Resetar senha</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        <div class="small text-secondary mb-2">
          Usu√°rio: <b id="rsNome">-</b> <span class="text-secondary">(<span id="rsEmail">-</span>)</span>
        </div>
        <label class="form-label small">Nova senha (min. 6)</label>
        <input name="novaSenha" type="password" class="form-control" minlength="6" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
        <div class="form-text">Ap√≥s reset, informe a senha para o usu√°rio acessar.</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary btn-sm"
          onclick="return confirm('Confirmar reset de senha?');">
          Resetar
        </button>
      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // ===== Alerts helpers =====
  function showAlert(type, msg){
    const box = document.getElementById('flashBox');
    const div = document.createElement('div');
    div.className = 'alert ' + (type === 'success' ? 'alert-success' : 'alert-danger');
    div.textContent = msg || (type === 'success' ? 'Salvo com sucesso.' : 'Ocorreu um erro.');
    box.prepend(div);
    window.scrollTo({ top: 0, behavior: 'smooth' });
    setTimeout(()=>{ try{ div.remove(); }catch(e){} }, 10000);
  }

  async function submitFormAjax(form){
    const url = form.getAttribute('action');
    const method = (form.getAttribute('method') || 'POST').toUpperCase();
    const fd = new FormData(form);

    const res = await fetch(url, { method, body: fd, credentials: 'same-origin' });
    const text = await res.text();

    if (!res.ok) {
      // servidor normalmente retorna texto tipo: "Email j√° cadastrado." / "Erro ao criar usu√°rio."
      showAlert('error', text || 'Erro ao salvar.');
      return false;
    }

    // sucesso: recarrega para atualizar lista/estado
    showAlert('success', 'Salvo com sucesso.');
    setTimeout(()=> window.location.reload(), 400);
    return true;
  }

  // ===== Intercepta submits que antes te jogavam numa tela de erro =====
  const formCriarUser = document.getElementById('formCriarUser');
  if (formCriarUser){
    formCriarUser.addEventListener('submit', async (e) => {
      e.preventDefault();
      await submitFormAjax(formCriarUser);
    });
  }

  const formAdmin = document.getElementById('formAdmin');
  if (formAdmin){
    formAdmin.addEventListener('submit', async (e) => {
      e.preventDefault();
      await submitFormAjax(formAdmin);
    });
  }

  const formMinhaSenha = document.getElementById('formMinhaSenha');
  if (formMinhaSenha){
    formMinhaSenha.addEventListener('submit', async (e) => {
      e.preventDefault();
      await submitFormAjax(formMinhaSenha);
    });
  }

  // ===== Modal Reset Senha =====
  const resetModal = document.getElementById('resetSenhaModal');
  resetModal.addEventListener('show.bs.modal', function (event) {
    const btn = event.relatedTarget;
    const userId = btn.getAttribute('data-userid');
    const nome = btn.getAttribute('data-username') || '-';
    const email = btn.getAttribute('data-useremail') || '-';

    document.getElementById('rsNome').textContent = nome;
    document.getElementById('rsEmail').textContent = email;

    const form = document.getElementById('resetSenhaForm');
    form.action = `/configuracoes/usuarios/${userId}/reset-senha`;

    const input = form.querySelector('input[name="novaSenha"]');
    if (input) input.value = '';
  });

  const resetSenhaForm = document.getElementById('resetSenhaForm');
  if (resetSenhaForm){
    resetSenhaForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const ok = await submitFormAjax(resetSenhaForm);
      if (ok){
        // fecha modal
        const modal = bootstrap.Modal.getInstance(resetModal);
        if (modal) modal.hide();
      }
    });
  }
</script>
</body>
</html>


