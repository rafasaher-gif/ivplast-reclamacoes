<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>IVPLAST | Registrar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body{background:#f3f5f7;}
    .card-box{max-width:520px;margin:50px auto;border:0;border-radius:14px;box-shadow:0 10px 30px rgba(0,0,0,.08);}
    .btn-primary{background:#1177cc;border-color:#1177cc;}
  </style>
</head>
<body>
  <div class="card card-box">
    <div class="card-body p-4 p-md-5">
      <div class="text-center mb-3">
        <img src="https://dummyimage.com/140x44/ffffff/1177cc.png&text=IVPLAST" alt="IVPLAST" style="height:44px;">
      </div>
      <h5 class="text-center mb-4">Criar conta</h5>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger py-2"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success py-2"><%= success %></div>
      <% } %>

      <form method="POST" action="/register">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input name="nome" class="form-control" placeholder="Seu nome" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" placeholder="email@empresa.com" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">Senha</label>
            <input name="senha" type="password" class="form-control" placeholder="••••••••" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">Confirmar senha</label>
            <input name="senha2" type="password" class="form-control" placeholder="••••••••" required />
          </div>
        </div>

        <button class="btn btn-primary w-100 mt-4 py-2" type="submit">Registrar</button>

        <div class="text-center mt-3">
          <a href="/login" class="text-decoration-none small">Voltar para o login</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
